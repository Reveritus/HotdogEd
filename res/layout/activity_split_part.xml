<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/hdToolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        layout="@layout/hd_toolbar" />
    <RelativeLayout
        android:id="@id/activity_split_part"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/hdToolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:id="@id/textView15"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/put_cursor_to_split" />
        <Button
            android:id="@id/buttonSplit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/split_at_cursor"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
        <EditText
            android:gravity="start|center|top"
            android:id="@id/editTextPart"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:editable="true"
            android:layout_above="@id/buttonSplit"
            android:layout_below="@id/textView15"
            android:layout_alignParentLeft="true"
            android:inputType="none" />
    </RelativeLayout>
</RelativeLayout>