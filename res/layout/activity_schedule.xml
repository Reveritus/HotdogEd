<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/hdToolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        layout="@layout/hd_toolbar" />
    <RelativeLayout
        android:padding="@dimen/dim5px"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/hdToolbar"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <CheckBox
            android:id="@id/checkBoxSyncCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sync_on_mobile_data"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <ListView
            android:id="@id/listViewSchedule"
            android:padding="@dimen/dim5px"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkBoxSyncCell"
            android:layout_alignLeft="@id/checkBoxSyncCell" />
    </RelativeLayout>
</RelativeLayout>