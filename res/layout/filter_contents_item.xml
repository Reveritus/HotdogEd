<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@id/rlTop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">
        <ImageButton
            android:id="@id/imageButtonDelete"
            android:background="@android:drawable/ic_menu_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
        <ImageButton
            android:id="@id/imageButtonEdit"
            android:background="@android:drawable/ic_menu_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imageButtonDelete"
            android:layout_alignParentTop="true" />
        <ImageButton
            android:id="@id/imageButtonAdd"
            android:background="@android:drawable/ic_menu_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/imageButtonEdit"
            android:layout_alignParentTop="true" />
        <TextView
            android:gravity="center_vertical"
            android:id="@id/tvFilterText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:layout_toLeftOf="@id/imageButtonAdd"
            android:layout_alignBottom="@id/imageButtonDelete"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
    </RelativeLayout>
</RelativeLayout>