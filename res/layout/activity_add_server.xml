<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@id/scrollView1"
    android:background="@drawable/backborder"
    android:padding="@dimen/dim10px"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@id/LinearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/textView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_to_fidonet" />
        <RelativeLayout
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@id/buttonAboutFidonet"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/about_fidonet"
                android:layout_centerHorizontal="false" />
        </RelativeLayout>
        <TextView
            android:id="@id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dont_have_point" />
        <RelativeLayout
            android:gravity="left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@id/buttonRequestPoint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/request_point"
                android:layout_centerHorizontal="false" />
        </RelativeLayout>
        <TextView
            android:id="@id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/already_have_point" />
        <RelativeLayout
            android:gravity="left"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@id/buttonHavePoint"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/have_point_address"
                android:layout_centerHorizontal="false" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>