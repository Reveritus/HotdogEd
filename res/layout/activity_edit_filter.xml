<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include
        android:id="@id/hdToolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        layout="@layout/hd_toolbar" />
    <RelativeLayout
        android:orientation="vertical"
        android:id="@id/ll1"
        android:background="@drawable/backborder"
        android:padding="@dimen/dim10px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim10px"
        android:layout_below="@id/hdToolbar">
        <ViewStub
            android:id="@id/infoLayoutStub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ListView
        android:id="@id/lvFilters"
        android:background="@drawable/backborder"
        android:padding="@dimen/dim10px"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/dim10px"
        android:layout_below="@id/ll1" />
</RelativeLayout>