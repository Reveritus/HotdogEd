<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="@dimen/dim5px"
    android:minWidth="600.0dip"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:id="@id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim10px"
        android:text="@string/filter_configuration" />
    <RelativeLayout
        android:padding="@dimen/dim5px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/textView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_field"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <Spinner
            android:id="@id/spinnerField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView"
            android:layout_alignParentLeft="true"
            android:dropDownWidth="fill_parent" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="@dimen/dim5px"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/textView5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_relation"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" />
        <Spinner
            android:id="@id/spinnerRelation"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView5"
            android:layout_alignParentLeft="true"
            android:dropDownWidth="fill_parent" />
    </RelativeLayout>
    <Button
        android:layout_gravity="center_horizontal"
        android:id="@id/buttonOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next" />
</LinearLayout>